{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./internal/tsconfig/node.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "composite": true,
    "noEmit": false
  },
  "include": [
    // types
    "**/*.d.ts",

    // config
    ".prettierrc.cjs",
    "./*.config.cjs",
    "./*.config.mjs",
    "./*.config.ts",

    // internal
    "internal/**/*.js",
    "internal/**/*.cjs",
    "internal/**/*.mjs",
    "internal/**/*.ts"
  ]
}
